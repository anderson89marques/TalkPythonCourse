{% extends "../shared/_layout.jinja2" %}

{% block content %}
<div class="content">
  <div class="hero">
    <h1>Find, install and publish Python packages <br>
        with the Python Package Index
    </h1>

    <input type="text" class="form-control" placeholder="Search Projects">
    <br>
    <br>
    <br>
    or <a href="#">browse projects</a>

  </div>

  <div class="pypi-stats">
    <div class="stat">{{package_count}} projects</div>
    <div class="stat">{{release_count}} releases</div>
    <div class="stat">{{user_count}} users</div>
  </div>
  
  <div class="container project-list">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">

        <h2>New Releases</h2>
        <span class="subtitle">Hot off the press: the newest project releases</span>
        
        {% for p in packages %}
          <div class="project">
            <div class="title"><a href="{{request.route_url('package_details', package_name=p.id)}}">{{p.id}}</a>{{p.version}}</div>
            <div class="desc">{{p.summary}}</div>
          </div>
        {% endfor %}  

      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
  
</div>
{% endblock content %}
